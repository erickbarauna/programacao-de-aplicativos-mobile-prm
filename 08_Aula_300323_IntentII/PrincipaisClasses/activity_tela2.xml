<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela2">

    <Button
        android:id="@+id/btnLigar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="60dp"
        android:text="@string/btnLigar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAg"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="28dp"
        android:text="@string/Agenda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLigar" />

    <Button
        android:id="@+id/btnApp"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="28dp"
        android:text="@string/aplicacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAg" />

    <Button
        android:id="@+id/btnSite"
        android:layout_width="146dp"
        android:layout_height="49dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="28dp"
        android:text="@string/btnSite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnApp" />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="24dp"
        android:text="@string/btnEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSite" />

</androidx.constraintlayout.widget.ConstraintLayout>